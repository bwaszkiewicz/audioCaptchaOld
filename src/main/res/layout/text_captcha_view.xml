<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textCaptcha"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textCaptchaHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="audioCaptcha"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/textCaptchaImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        app:srcCompat="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textCaptchaInput"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Type code"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/textCaptchaSubmit"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:layout_weight="1"
            android:background="@drawable/ic_check" />

        <Button
            android:id="@+id/textCaptchaRefresh"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:layout_weight="1"
            android:background="@drawable/ic_replay" />
    </LinearLayout>
</LinearLayout>
